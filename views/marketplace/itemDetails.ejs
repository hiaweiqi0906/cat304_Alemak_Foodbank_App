<form action="/donor/item/edit/<%=item._id%>" method="post" enctype="multipart/form-data">
    <label for="coverImg">CoverImg: </label>
    <img src="<%=item.coverUri%>" style="width: 50px; height: 50px;"/>
    <input type="file" name="coverImg" id="coverImg">
    <br>

    <label for="img1">img1: </label>
    <img src="<%= (typeof(item.itemUri[0]) === 'undefined') ? 'https://upload.wikimedia.org/wikipedia/commons/thumb/7/77/Google_Images_2015_logo.svg/1200px-Google_Images_2015_logo.svg.png' : item.itemUri[0] %>" style="width: 50px; height: 50px;"/>
    <% if(typeof(item.itemUri[0]) !== 'undefined') { %>
        <a href="/donor/item/delete/<%=item._id%>/0">Delete</a>
        <%}%>
    <input type="file" name="img1" id="img1">
    <br>

    <label for="img2">img2: </label>
    <img src="<%= typeof(item.itemUri[1]) === 'undefined' ? 'https://upload.wikimedia.org/wikipedia/commons/thumb/7/77/Google_Images_2015_logo.svg/1200px-Google_Images_2015_logo.svg.png' : item.itemUri[1] %>" style="width: 50px; height: 50px;"/>
    <% if(typeof(item.itemUri[1]) !== 'undefined') { %>
         <a href="/donor/item/delete/<%=item._id%>/1">Delete</a>
         <%}%><input type="file" name="img2" id="img2">
    
    <br>

    <label for="img3">img3: </label>
    <img src="<%= typeof(item.itemUri[2]) === 'undefined' ? 'https://upload.wikimedia.org/wikipedia/commons/thumb/7/77/Google_Images_2015_logo.svg/1200px-Google_Images_2015_logo.svg.png' : item.itemUri[2]%>" style="width: 50px; height: 50px;"/>
    <% if(typeof(item.itemUri[2]) !== 'undefined') { %>
        <a href="/donor/item/delete/<%=item._id%>/2">Delete</a>
        <%}%>
    <input type="file" name="img3" id="img3">
    <br>

    <label for="itemName">itemName: </label>
    <input type="text" name="itemName" id="itemName" value="<%=item.itemName%>">
    <br>

    <label for="itemExpiryDate">itemExpiryDate: </label>
    <input type="date" name="itemExpiryDate" id="itemExpiryDate" value="<%=item.itemExpiryDate.toISOString().substr(0, 10)%>">
    <br>

    <label for="itemQuantity">itemQuantity: </label>
    <input type="text" name="itemQuantity" id="itemQuantity" value="<%=item.itemQuantity%>">
    <br>

    <label for="itemDescription">itemDescription: </label>
    <textarea name="itemDescription" id="itemDescription" cols="30" rows="10"><%=item.itemDescription%></textarea>
    <br>

    <label for="itemPrice">itemPrice: </label>
    <input type="number" name="itemPrice" id="itemPrice" value="<%=item.itemPrice%>">
    <br>

    <input type="submit" value="Update">
    <a href="/donor/item/">Cancel</a>

</form>